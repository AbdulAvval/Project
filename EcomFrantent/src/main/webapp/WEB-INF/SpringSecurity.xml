<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
			xmlns:mvc="http://www.springframework.org/schema/mvc"
			xmlns:beans="http://www.springframework.org/schema/beans"
			xmlns:context="http://www.springframework.org/schema/context"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instace"
			xmlns:tx="http://www.springframework.org/schema/tx"
			xmlns:security="http://www.springframework.org/schema/security"
			xsi:schemaLocation="http://www.springframework.org/schema/beans
			hrrp://www.springframework.org/schema/beans/spring-beans.xmd
			hrrp://www.springframework.org/schema/mvc
			hrrp://www.springframework.org/schema/mvc/spring-mvc.xsd
			hrrp://www.springframework.org/schema/context
			hrrp://www.springframework.org/schema/context/spring-context.xsd
			hrrp://www.springframework.org/schema/tx
			hrrp://www.springframework.org/schema/tx/spring-tx.xsd
			hrrp://www.springframework.org/schema/security
			hrrp://www.springframework.org/schema/security/spring-security.xsd ">


		<security:http auto-config="true" use-expressions="true">
		
		<security:form-login login-page="/login"
		default-target-url="/"
		login-processing-url="/perform_login"
		authentication-failure-url="/login"
		authentication-success-forward-url="/login_success"/>
		<security:logout logout-success-url="/login" logout-url="/perform_logout"/>
		<security:csrf disabled="true"/>
		
		</security:http>	
		<security:authentication-manager>
		<security:authentication-provider>
		<security:jdbc-user-service
			data-source-ref="dataSource"
			users-by-username-query="select username,password,enabled from UserDetail where
			username=?"
			authorities-by-username-query="select username,role from UserDetail where
			username=?" />
		
		</security:authentication-provider>
		</security:authentication-manager>
			

</beans:beans>